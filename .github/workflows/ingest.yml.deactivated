name: ingest

on:
  workflow_dispatch:
  schedule:
    - cron: "15 * * * *"  # hourly at minute 15

jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.12"
      - run: pip install -r requirements.txt
      - name: Run ingestion
        env:
          OBS_DATABASE_URL: ${{ secrets.DATABASE_URL }}
        run: python jobs/ingest.py
